{
  "name": "create-minimal-package",
  "type": "commonjs",
  "version": "0.0.0-development",
  "description": "A template for creating npm packages using TypeScript. Note that this is a generated sample package.",
  "author": {
    "name": "34j"
  },
  "license": "MIT",
  "homepage": "https://github.com/34j/create-minimal-package",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/34j/create-minimal-package.git"
  },
  "bugs": {
    "url": "https://github.com/34j/create-minimal-package/issues"
  },
  "keywords": [
    "boilerplate",
    "template",
    "typescript",
    "vscode",
    "jest",
    "husky",
    "semantic-release",
    "typedoc"
  ],
  "main": "./dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=12.0"
  },
  "scripts": {
    "build:watch": "tsc --watch --project tsconfig.build.json",
    "build": "tsc --project tsconfig.build.json",
    "lint": "eslint --fix",
    "prepare": "husky",
    "typedoc": "typedoc",
    "typedoc:watch": "typedoc --watch",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "watch": "npm-run-all --race --parallel *:watch",
    "update": "npm-check-updates -u"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "eslint": "^9.22.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "npm-check-updates": "^17.1.15",
    "npm-run-all2": "5.0.0",
    "semantic-release": "^24.2.3",
    "ts-jest": "^29.2.6",
    "typedoc": "^0.27.9",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  },
  "typedocOptions": {
    "entryPoints": [
      "./src"
    ],
    "tsconfig": "./tsconfig.build.json"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "README.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  }
}
