{
  "name": "create-minimal-package",
  "type": "commonjs",
  "version": "1.7.5",
  "description": "Minimalistic npm package template with ğŸ“¦ğŸš€semantic-release + Commitizen, CodeCov, Renovate, pre-commit + EsLint (âœ—ğŸ¶Husky + Lint Staged), âš¡ï¸Vitest (âœ—ğŸ‘¢Jest), ğŸ“–TypeDoc + Github Pages support. Note that this is a generated sample package.",
  "author": {
    "name": "34j"
  },
  "license": "MIT",
  "homepage": "https://github.com/34j/create-minimal-package",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/34j/create-minimal-package.git"
  },
  "bugs": {
    "url": "https://github.com/34j/create-minimal-package/issues"
  },
  "keywords": [
    "boilerplate",
    "template",
    "typescript",
    "vitest",
    "pre-commit",
    "semantic-release",
    "typedoc"
  ],
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/src/**/*"
  ],
  "scripts": {
    "build:watch": "tsc --watch --project tsconfig.json",
    "preinstall": "npx only-allow pnpm",
    "build": "tsc --project tsconfig.json",
    "lint": "eslint --fix",
    "typedoc": "typedoc",
    "typedoc:watch": "typedoc --watch",
    "test:watch": "vitest --watch --coverage --coverage.include=src",
    "test": "vitest --coverage --coverage.include=src",
    "watch": "npm-run-all --race --parallel *:watch",
    "update": "npm-check-updates -u",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@antfu/eslint-config": "6.3.0",
    "@tsconfig/strictest": "2.0.8",
    "@types/node": "24.10.9",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@vitest/browser": "4.0.18",
    "@vitest/browser-playwright": "4.0.18",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "9.39.2",
    "npm-run-all2": "8.0.4",
    "playwright": "1.58.0",
    "typedoc": "0.28.16",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "typedocOptions": {
    "entryPoints": [
      "src"
    ],
    "tsconfig": "tsconfig.json",
    "headings": false
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "README.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  }
}
